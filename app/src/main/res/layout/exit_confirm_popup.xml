<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/night"
    android:padding="@dimen/padding">

    <Button
        android:id="@+id/ExitConfirm"
        android:layout_width="496dp"
        android:layout_height="75dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_active"
        android:fontFamily="@font/open_sans"
        android:text="@string/ExitTitle"
        android:textColor="@drawable/text_states"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IDQRWarningDirections" />

    <Button
        android:id="@+id/CancelConfirm"
        android:layout_width="496dp"
        android:layout_height="75dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/open_sans"
        android:text="@string/Cancel"
        android:textColor="@color/white"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ExitConfirm" />

    <TextView
        android:id="@+id/IDQRWarningDirections"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/open_sans_italic"
        android:text="@string/ExitWarning"
        android:textColor="@color/bootstrap_brand_secondary_border"
        android:textSize="@dimen/instruction_text_size"
        app:layout_constraintEnd_toEndOf="@+id/ExitConfirm"
        app:layout_constraintStart_toStartOf="@+id/ExitConfirm"
        app:layout_constraintTop_toBottomOf="@+id/IDExit" />

    <TextView
        android:id="@+id/IDExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/futura_medium_condensed_bt"
        android:gravity="center_horizontal"
        android:text="@string/QRCodeTitle"
        android:textColor="@drawable/header_states"
        android:textSize="@dimen/header_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>