<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:state_enabled="true"
        android:drawable="@drawable/thumb_active" />
    <item android:state_checked="true" android:state_enabled="false"
        android:drawable="@drawable/thumb_active_disabled" />
    <item android:state_enabled="false"
        android:drawable="@drawable/thumb_disabled" />
    <item android:drawable="@drawable/thumb_default" />
</selector>