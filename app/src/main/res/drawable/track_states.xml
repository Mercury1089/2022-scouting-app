<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:state_enabled="true"
        android:drawable="@drawable/track_active" />
    <item android:state_checked="true" android:state_enabled="false"
        android:drawable="@drawable/track_active_disabled" />
    <item android:state_checked="false" android:state_enabled="false"
        android:drawable="@drawable/track_disabled" />
    <item android:drawable="@drawable/track_default" />
</selector>